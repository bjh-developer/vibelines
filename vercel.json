{
  "functions": {
    "api/genius-search.js": { "maxDuration": 30 },
    "api/lyrics-scrape.js": { "maxDuration": 30 }
  },
  "build": {
    "env": {
      "VITE_API_BASE_URL": ""
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)",     "destination": "/" }
  ]
}
